{{#modal-dialog action='closeModal'}}
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title">Confirm Delete</h4>
</div>
<div class="modal-body">
  <p>Are you sure you want to delete the {{level.text}} {{language.name}} submission from {{candidateDisplay}}?</p>
</div>
<div class="modal-footer">
  <button class="btn btn-default" {{action 'closeModal'}}>Cancel</button>
  <button class="btn btn-primary" {{action 'deleteSubmission'}}>Delete</button>
</div>
{{/modal-dialog}}
