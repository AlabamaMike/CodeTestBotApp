<div class="row">
    <div class="large-12 columns">
        <h1>{{candidate.level.text}} {{language.name}} Submission</h1>
    </div>
</div>

<div class="row">
    <div class="large-12 columns">
        <h3>Details</h3>
    </div>
</div>
{{#if isRecruiter}}
<div class="row display">
    <div class="large-12 columns">
        <label>Candidate</label>
        <p>{{candidate.display}}</p>
    </div>
</div>
{{/if}}
<div class="row display">
    <div class="large-12 columns">
        <label>File</label>
        <a class="button small radius success" {{bind-attr href=zipfile}}><i class="fi-download"></i>&nbsp;Download</a>
    </div>
</div>
<div class="row display">
    <div class="large-12 columns">
        <label>Email Text</label>
        <p>{{emailText}}</p>
    </div>
</div>
{{#if hasAssessments}}
<div class="row display">
    <div class="large-12 columns">
        <label>Average Score</label>
        <p class="score">{{averageScore}}</p>
    </div>
</div>
{{/if}}

<div class="row">
    <div class="large-12 columns">
        <h3>Assessments</h3>

        <table class="large-12 assessments">
            <thead>
            <tr>
                <th>Assessor</th>
                <th>Score</th>
                <th>Completion Date</th>
            </tr>
            </thead>
            <tbody>
            {{#each assessment in assessments}}
                <tr class="assessment">
                    <td class="assessor">{{assessment.assessor}}</td>
                    <td class="score">{{assessment.score}}</td>
                    <td class="created-at">{{assessment.createdAtDisplay}}</td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="3" class="text-center">No assessments yet.</td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        {{#link-to 'assessments.new' class="button small radius success right"}}New Assessment{{/link-to}}
    </div>
</div>