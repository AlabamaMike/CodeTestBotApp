{{#each crumb in breadCrumbs}}
<li {{bind-attr class="crumb.isCurrent:active:"}}>
  {{#if crumb.linkable}}
    {{#unless crumb.isCurrent}}
      {{#link-to crumb.path}}
        {{crumb.name}}
      {{/link-to}}
    {{else}}
      {{crumb.name}}
    {{/unless}}
  {{else}}
    {{crumb.name}}
  {{/if}}
</li>
{{/each}}
