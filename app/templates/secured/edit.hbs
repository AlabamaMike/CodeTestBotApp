<div class="row">
    <div class="large-12 columns">
        <h1>Edit Page</h1>

        <ul class="tabs" data-tab>
            <li class="tab-title active"><a href="#edit">Edit</a></li>
            <li class="tab-title"><a href="#preview">Preview</a></li>
        </ul>
        <div class="tabs-content">
            <div class="content active" id="edit">
                {{textarea value=rawText cols="80" rows="20"}}
            </div>
            <div class="content" id="preview">
                {{render-marked rawText}}
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="large-2 large-offset-10 columns">
        <button class="button expand success radius small" {{action 'save'}}>Save Changes</button>
    </div>
</div>
