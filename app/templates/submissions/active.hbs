<div class="row">
    <div class="large-12 columns">
        <h1 style="float:left">Active Submissions </h1>
        <div style="margin-top:12px">
            {{#link-to 'analytics' classNames="button small radius right"}}Analytics{{/link-to}}
        </div>

        {{#if isRecruiter}}
        <table class="active recruiter">
        {{else}}
        <table class="active">
        {{/if}}
            <thead>
                <tr>
                {{#if isRecruiter}}
                    {{sorting-header title='Candidate'
                                     key='candidateDisplay'
                                     sortProperties=sortProperties
                                     sortAscending=sortAscending
                                     action='sort'
                                     class='candidate'}}
                    {{sorting-header title='Langauge'
                                     key='languageDisplay'
                                     sortProperties=sortProperties
                                     sortAscending=sortAscending
                                     action='sort'
                                     class='language'}}
                    {{sorting-header title='Level'
                                     key='level.text'
                                     sortProperties=sortProperties
                                     sortAscending=sortAscending
                                     action='sort'
                                     class='level'}}
                    {{sorting-header title='Created date'
                                     key='createdAtDisplay'
                                     sortProperties=sortProperties
                                     sortAscending=sortAscending
                                     action='sort'
                                     class='time'}}
                {{else}}
                    {{sorting-header title='Langauge'
                                     key='languageDisplay'
                                     sortProperties=sortProperties
                                     sortAscending=sortAscending
                                     action='sort'
                                     class='language'}}
                    {{sorting-header title='Level'
                                     key='level.text'
                                     sortProperties=sortProperties
                                     sortAscending=sortAscending
                                     action='sort'
                                     class='level'}}
                    {{sorting-header title='Created date'
                                     key='createdAtDisplay'
                                     sortProperties=sortProperties
                                     sortAscending=sortAscending
                                     action='sort'
                                     class='time'}}
                {{/if}}
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each submission in arrangedContent}}
                <tr class="submission">
                    {{#if isRecruiter}}
                    <td>{{submission.candidateDisplay}}</td>
                    {{/if}}
                    <td>{{submission.languageDisplay}}</td>
                    <td>{{submission.level.text}}</td>
                    <td>{{submission.createdAtDisplay}}</td>
                    <td>
                    {{#if isRecruiter}}
                        {{view 'submission/action-menu' context=submission}}
                    {{else}}
                        {{#link-to 'submission.index' submission class="button tiny radius"}}View{{/link-to}}
                    {{/if}}
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">There are no active submissions.</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{#if isRecruiter}}
<div class="row">
    <div class="large-12 columns">
        {{#link-to 'submissions.new' classNames="button small radius success right"}}New Submission{{/link-to}}
    </div>
</div>
{{/if}}
