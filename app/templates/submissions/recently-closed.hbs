{{#custom-panel}}
  {{panel-title title="Recently Closed Submissions"}}
  <div class="panel-body">
    <p>There {{pluralize-phrase length phrase='{is|are}'}} {{length}} recently closed {{pluralize-phrase length phrase='submission{|s}'}}.</p>
  <table class="table table-buttons">
    <thead>
      <tr>
        {{#if isRecruiter}}
        <th>Candidate</th>
        <th>Consensus</th>
        <th></th>
        {{else}}
        <th>Consensus</th>
        <th>Level</th>
        <th>Language</th>
        <th class="action-column-small"></th>
        {{/if}}
      </tr>
    </thead>
    <tbody>
    {{#each submission in arrangedContent}}
      <tr>
        {{#if isRecruiter}}
          <td>{{submission.candidateDisplay}}</td>
          <td>{{submission.averageScoreShortText}}</td>
          <td>
            <div class="btn-group">
              {{link-to 'View' 'submission.index' submission class='btn btn-primary'}}
              {{link-to 'Report' 'submission.report' submission class='btn btn-primary'}}
            </div>
          </td>
        {{else}}
          <td>{{submission.averageScoreShortText}}</td>
          <td>{{submission.level.text}}</td>
          <td>{{submission.language.name}}</td>
          <td>{{link-to 'View' 'submission.index' submission class='btn btn-primary'}}</td>
        {{/if}}
      </tr>
    {{/each}}
    </tbody>
  </table>
  </div>
{{/custom-panel}}
