<div class="row">
    <div class="large-12 columns">
        <h1>New Submission</h1>
    </div>
</div>
<div class="row">
    <div class="large-12 columns">
        <label>Candidate Name
            {{input value=candidateName placeholder="Name"}}
        </label>
        <label>Candidate Email
            {{input value=candidateEmail placeholder="Email Address"}}
        </label>
    </div>
</div>
<div class="row">
    <div class="large-4 columns">
        {{view Ember.Select viewName="select"
        contentBinding="levels"
        optionLabelPath="content.text"
        optionValuePath="content.id"
        prompt="Select candidate level:"
        selectionBinding="selectedLevel"}}
    </div>
</div>
<div class="row">
    <div class="large-4 columns">
        {{view Ember.Select viewName="select"
            id="language-select"
            contentBinding="languages"
            optionLabelPath="content.name"
            optionValuePath="content.id"
            prompt="Select a language:"
            selectionBinding="selectedLanguage"}}
    </div>
</div>
<div class="row">
    <div class="large-12 columns">
        <label>Copy and paste the email text or any instructions given by the candidate.
            {{textarea value=submission.emailText rows="6" placeholder="Email text or instructions" id="email-text"}}
        </label>
        <label>Select the zipfile provided by the candidate.
            {{view 'file-upload' name="zipfile" file=submission.zipfile id="zipfile" fileName=submission.fileName }}
        </label>
        <input id="submit-button" type="button" value="Create New Codetest!" class="button small radius success" {{bind-attr disabled=isFormIncomplete}} {{action submit}}/>
    </div>
</div>
