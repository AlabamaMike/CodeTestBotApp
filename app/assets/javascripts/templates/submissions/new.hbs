<div class="row">
    <div class="large-12 columns">
        <h1>New Submission</h1>
    </div>
</div>
<div class="row">
    <div class="large-6 columns">
        {{view Ember.Select viewName="select"
            contentBinding="model.candidates"
            optionLabelPath="content.display"
            optionValuePath="content.id"
            prompt="Select a candidate:"
            selectionBinding="selectedCandidate"
            classNames="small"}}
    </div>
</div>
<div class="row">
    <div class="large-12 columns">
        <label>Copy and paste the email text or any instructions given by the candidate.
            {{textarea value=model.submission.emailText rows="6" placeholder="Email text or instructions"}}
        </label>
        <label>Select the zipfile provided by the candidate.
            {{view CodeTestBotApp.FileUpload name="zipfile" file=model.submission.zipfile}}
        </label>
        <input type="button" value="Create New Codetest!" class="button small radius success" {{bind-attr disabled=isFormIncomplete}} {{action createSubmission}}/>
    </div>
</div>
