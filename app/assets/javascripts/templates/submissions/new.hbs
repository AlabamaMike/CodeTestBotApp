<form method="POST" enctype='multipart/form-data' action="http://localhost:3000/code_tests"> <!-- TODO: this needs to be a var or something -->
    <div class="row">
        <div class="large-12 columns">
            <h1>New Submission</h1>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <label>Copy and paste the email text or any instructions given by the candidate.
                {{textarea value=emailText rows="6" placeholder="Email text or instructions"}}
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <label>Select the zipfile provided by the candidate.
                {{input type="file" value=file}}
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <input type="submit" id="submit" name="submit" value="Create New Codetest!" class="button small radius success" {{bind-attr disabled=isFormIncomplete}}/>
        </div>
    </div>
</form>
